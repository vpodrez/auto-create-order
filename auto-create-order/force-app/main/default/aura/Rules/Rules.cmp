<aura:component controller="RuleController" implements="flexipage:availableForAllPageTypes" access="global">
    <aura:attribute name="rules" type="List" />
    <aura:handler name="init" value="{!this}" action="{!c.doInit}" />
    <lightning:card title="Rule" variant="Narrow" iconName="utility:rules">
        <aura:set attribute="actions">
            <lightning:buttonIcon iconName="utility:down" variant="border-filled" alternativeText="Show More" />
        </aura:set>
        <div class="slds-grid slds-grid_align-center">
            <div class="slds-col slds-size_2-of-3">
                <lightning:input name="ruleName" label="Rule Name" value="Rule Name" readonly="true" />
            </div>
        </div>
        <div class="slds-grid slds-grid_align-center">
            <div class="slds-col slds-size_2-of-3">
                <lightning:input name="objectApiName" label="Object Api Name" value="Object Api Name" readonly="true" />
            </div>
        </div>
        <div class="slds-grid slds-grid_align-center">
            <div class="slds-col slds-size_2-of-3">
                <lightning:combobox name="ruleChoose" label="Rule" value="Choose rule" placeholder="Choose rule"
                    options="{!v.rules}" />
            </div>
        </div>
        <div class="slds-grid slds-grid_align-center">
            <div class="slds-col slds-size_2-of-3">
                <lightning:input name="operator" label="Operator" value="Operator" readonly="true" />
            </div>
        </div>
    </lightning:card>
</aura:component>